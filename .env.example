# Discord OAuth2
DISCORD_CLIENT_ID=        # 디스코드 애플리케이션 Client ID
DISCORD_CLIENT_SECRET=    # 디스코드 애플리케이션 Client Secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/callback  # OAuth 콜백 URL

# 세션/관리자
SESSION_SECRET=           # 32자 이상 랜덤 문자열 (비우면 서버 시작 시 자동 생성)
ADMIN_DISCORD_IDS=123,456,789  # 관리자 디스코드 ID 목록(콤마 구분)
BASE_URL=http://localhost:3000 # 선택: Next 서버 base URL

# SMTP (메일 발송)
EMAIL_SMTP_HOST=          # SMTP 서버 주소
EMAIL_SMTP_PORT=587       # SMTP 포트
EMAIL_SMTP_SECURE=false   # TLS 사용 여부
EMAIL_SMTP_USER=          # SMTP 사용자
EMAIL_SMTP_PASS=          # SMTP 비밀번호
EMAIL_FROM=OG <no-reply@example.com> # 발신자 표시

# BankAPI (푸시알림 기반)
BANKPIN=                  # PushBullet Access Token
BANK_NAME=                # 알림 앱 패키지명 필터 (예: com.kbstar.reboot)
PORT=3001                 # BankAPI 서버 포트
BANKAPI_CORS_ORIGIN=*     # BankAPI CORS 허용 오리진
ADMIN_API_KEY=            # BankAPI 관리자 키 (선택)
DEPOSIT_DEADLINE_MINUTES=30 # 충전 요청 만료(분)
DEPOSIT_MIN_AMOUNT=1000   # 최소 충전 금액
DEPOSIT_MAX_AMOUNT=1000000 # 최대 충전 금액
DEPOSIT_UNIT_AMOUNT=1000  # 충전 단위

# 입금 계좌 정보 (웹 충전 안내용)
BANK_ACCOUNT_BANK=        # 은행명 (예: 국민은행)
BANK_ACCOUNT_NUMBER=      # 계좌번호
BANK_ACCOUNT_NAME=        # 예금주명

# Next -> BankAPI 프록시
BANKAPI_BASE_URL=http://localhost:3001  # BankAPI 서버 주소
BANKAPI_ADMIN_KEY=        # Next가 BankAPI 관리자 호출 시 사용할 키(ADMIN_API_KEY와 동일)
